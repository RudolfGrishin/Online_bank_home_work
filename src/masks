from src.masks import get_mask_account, get_mask_card_number

def mask_account_card(number: str) -> str:
    """Функция маскировки общих данных пользователя карты и номера счёта."""
    original_number = number.split()[-1]  # Получаем последний элемент как номер карты или счета
    if len(original_number) == 16:
        mask_number_1 = get_mask_card_number(original_number)  # Маскируем номер карты
        result = f"{number[:-len(original_number)]}{mask_number_1}"  # Формируем результат
    elif len(original_number) == 20:
        mask_number_2 = get_mask_account(original_number)  # Маскируем номер счета
        result = f"{number[:-len(original_number)]}{mask_number_2}"  # Формируем результат
    else:
        return number  # Если длина не соответствует, возвращаем оригинал
    return result
